<project basedir="../../../" xmlns:au="antlib:org.apache.ant.antunit">

    <import file="project-base.xml"/>

    <target name="test-project-organisation">
        <au:assertPropertyEquals name="project.organisation" value="com.github.moaxcp"/>
    </target>

    <target name="test-project-name">
        <echo>project name is ${ant.project.name}</echo>
        <au:assertPropertyEquals name="ant.project.name" value="gradle-to-ant"/>
    </target>

    <target name="test-project-version">
        <au:assertPropertyEquals name="project.version" value="0.0.0"/>
    </target>

    <target name="test-ivy-version">
        <au:assertPropertyEquals name="ivy.version" value="2.4.0"/>
    </target>

    <target name="test-ivy-settings-file">
        <au:assertPropertyEquals name="ivy.settings.file" value="${basedir}/ivysettings.xml"/>
    </target>

    <target name="test-property-build-dir">
        <au:assertPropertyEquals name="build.dir" value="${basedir}/build/test-build"/>
    </target>

    <target name="test-property-build-cache">
        <au:assertPropertyEquals name="build.cache" value="${basedir}/build/test-build-cache"/>
    </target>

    <target name="test-cache-download-dir">
        <au:assertPropertyEquals name="cache.download.dir" value="${build.cache}/download"/>
    </target>

    <target name="test-reports-dir">
        <au:assertPropertyEquals name="reports.dir" value="${build.dir}/reports"/>
    </target>

    <target name="test-property-reports-ant-unit-dir">
        <au:assertPropertyEquals name="reports.ant.unit.dir" value="${basedir}/build/reports/antunit"/>
    </target>

    <target name="test-src-dir">
        <au:assertPropertyEquals name="src.dir" value="${basedir}/src"/>
    </target>

    <target name="test-src-antunit-dir"> 
        <au:assertPropertyEquals name="src.antunit.dir" value="${src.dir}/antunit"/>
    </target>

    <target name="test-src-antunit-ant-dir">
        <au:assertPropertyEquals name="src.antunit.ant.dir" value="${src.antunit.dir}/ant"/>
    </target>
</project>
